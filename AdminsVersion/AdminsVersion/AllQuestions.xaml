<Window x:Class="AdminsVersion.AllQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminsVersion"
        mc:Ignorable="d"
        Title="AllQuestions" Height="450" Width="850">
    <Grid Margin="20">
        <ListBox Name="Questions" HorizontalAlignment="Center" Height="264" Margin="26,41,26,0" VerticalAlignment="Top" Width="700" PreviewKeyDown="Questions_PreviewKeyDown"/>
        <ComboBox Name="Topics" HorizontalAlignment="Center" Margin="-100,0,0,0" VerticalAlignment="Top" Width="600"/>
        <Button Name="ShowQuestions" Content="Показать" HorizontalAlignment="Center" Margin="625,0,0,0" VerticalAlignment="Top" Width="75" Click="ShowQuestions_Click"/>
        <Button Name ="Save" Content="Закрыть" HorizontalAlignment="Right" Margin="0,348,100,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>

    </Grid>
</Window>
